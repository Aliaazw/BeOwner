<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:background="@drawable/circle_white"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvCustomerNameSimple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Pelanggan"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvOrderStatusTagSimple"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDateMasukSimple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/date_masuk_label_placeholder_main"
        android:textColor="@color/dark_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvCustomerNameSimple"
        app:layout_constraintTop_toBottomOf="@id/tvCustomerNameSimple" />

    <TextView
        android:id="@+id/tvOrderStatusTagSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_status_antrian_main"
        android:textColor="@color/white"
        android:background="@drawable/circle_blue" android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCustomerNameSimple"
        app:layout_constraintBottom_toBottomOf="@id/tvDateMasukSimple"/>

</androidx.constraintlayout.widget.ConstraintLayout>